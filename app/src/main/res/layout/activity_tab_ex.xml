<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:rvp="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff"
    android:orientation="vertical">

    <com.ruffian.library.RVPIndicator
        android:id="@+id/vp_indicator"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#ADD597"
        android:orientation="horizontal"
        rvp:indicator_color="#f29b76"
        rvp:indicator_height="20dp"
        rvp:indicator_style="bitmap"
        rvp:indicator_visible_count="3"
        rvp:style_bitmap_src="@drawable/ic_indicator"
        rvp:text_color_normal="#fb9090"
        rvp:text_color_selected="#FF0000"
        rvp:text_size="16sp" />


    <com.ruffian.library.RVPIndicator
        android:id="@+id/vp_indicator1"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:background="#ADD597"
        android:orientation="horizontal"
        rvp:indicator_color="#f29b76"
        rvp:indicator_style="line"
        rvp:indicator_visible_count="4"
        rvp:style_line_padding="10dp"
        rvp:text_color_normal="#fb9090"
        rvp:text_color_selected="#FF0000" />

    <com.ruffian.library.RVPIndicator
        android:id="@+id/vp_indicator3"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:background="#ADD597"
        android:orientation="horizontal"
        rvp:indicator_color="#f29b76"
        rvp:indicator_style="bitmap"
        rvp:indicator_visible_count="4"
        rvp:style_bitmap_src="@drawable/icon"
        rvp:text_color_normal="#fb9090"
        rvp:text_color_selected="#FF0000" />


    <com.ruffian.library.RVPIndicator
        android:id="@+id/vp_indicator4"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:background="#ADD597"
        android:orientation="horizontal"
        rvp:indicator_color="#ffffff"
        rvp:indicator_style="triangle"
        rvp:indicator_visible_count="4"
        rvp:text_color_normal="#fb9090"
        rvp:text_color_selected="#FF0000" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>