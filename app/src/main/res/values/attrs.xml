    <declare-styleable name="LTimeView">
        <!--设置流程线未完成颜色-->
        <attr name="color_line_normal" format="color" />

        <!--设置流程线完成颜色-->
        <attr name="color_line_state" format="color" />

        <!--设置流程线完成颜色-->
        <attr name="color_text_state" format="color" />

        <!--设置流程线未完成颜色-->
        <attr name="color_text_normal" format="color" />

        <!--设置流程线和文字断开颜色-->
        <attr name="color_line_text_close" format="color" />

        <!--圆圈和文字之间的距离-->
        <attr name="mMarginTop" format="dimension" />

        <!--需要绘制的文字-->
        <attr name="tabNames" format="reference" />

        <!--文本的字体大小-->
        <attr name="android:textSize" />

        <!--基准线高度-->
        <attr name="lintHight" format="dimension" />
    </declare-styleable>


    <declare-styleable name="DropDownMenu">

        <attr name="ddunderlineColor" format="color" />
        <attr name="dddividerColor" format="color" />
        <attr name="ddtextSelectedColor" format="color" />
        <attr name="ddtextUnselectedColor" format="color" />
        <attr name="ddmenuBackgroundColor" format="color" />
        <attr name="ddmaskColor" format="color" />
        <attr name="ddmenuTextSize" format="dimension" />
        <attr name="ddmenuSelectedIcon" format="reference" />
        <attr name="ddmenuUnselectedIcon" format="reference" />
        <attr name="ddmenuMenuHeightPercent" format="float" />
    </declare-styleable>


    <declare-styleable name="RequestIcon">
        <attr name="icon_color" format="reference|color" />
        <attr name="icon_size" format="dimension" />
        <attr name="icon_style" format="enum">
            <enum name="tick_start_circle" value="0" />
            <enum name="tick_half_circle" value="1" />
            <enum name="tick_end_circle" value="2" />
        </attr>
        <attr name="speed_multiplier" format="float" />
    </declare-styleable>
    <declare-styleable name="RequestButton">
        <attr name="request_icon_spacing" format="dimension" />
        <attr name="request_icon_color" format="color" />
        <attr name="request_icon_size" format="dimension" />
        <attr name="request_icon_style" format="enum">
            <enum name="tick_start_circle" value="0" />
            <enum name="tick_half_circle" value="1" />
            <enum name="tick_end_circle" value="2" />
        </attr>
        <attr name="request_speed_multiplier" format="float" />
        <attr name="text_default" format="string" />
        <attr name="text_progress" format="string" />
        <attr name="text_success" format="string" />
        <attr name="text_failure" format="string" />
        <attr name="text_color" format="color" />
        <attr name="text_size" format="dimension" />
        <attr name="text_width" format="dimension" />
    </declare-styleable>

    <declare-styleable name="CustomStatusView">
        <attr name="progress_width" format="dimension" />
        <attr name="progress_radius" format="dimension" />
        <attr name="loading_color" format="color" />
        <attr name="load_success_color" format="color" />
        <attr name="load_failure_color" format="color" />
    </declare-styleable>

    <declare-styleable name="NewRequesButton">
        <attr name="bt_text_default" format="string" />
        <attr name="bt_text_progress" format="string" />
        <attr name="bt_text_success" format="string" />
        <attr name="bt_text_failure" format="string" />
        <attr name="bt_text_color" format="color" />
        <attr name="bt_text_size" format="dimension" />
        <attr name="bt_text_width" format="dimension" />
        <attr name="bt_icon_progress" format="color" />
        <attr name="bt_icon_success" format="color" />
        <attr name="bt_icon_failure" format="color" />
        <attr name="bt_icon_radius" format="dimension" />
        <attr name="bt_icon_line_width" format="dimension" />
        <attr name="bt_request_icon_spacing" format="dimension" />
    </declare-styleable>

    <declare-styleable name="XOView">
        <attr name="xo_status" format="integer" />
        <attr name="xo_color" format="color" />

    </declare-styleable>

    <declare-styleable name="ScaleImageView">
        <!--缩放的类型：按宽还是高-->
        <attr name="viewScaleType" format="enum">
            <enum name="width" value="1" />
            <enum name="height" value="2" />
        </attr>
        <!--缩放的倍数-->
        <!--比如：宽120 高60 (按宽来缩放：比例就是 2; 按高度来缩放，比例：0.5f)-->
        <attr name="viewScaleRadio" format="float" />
    </declare-styleable>

    <declare-styleable name="SlidingTabLayouts">
        <attr name="tab_slide_text_color_normal" format="color" />
        <attr name="tab_slide_text_color_selected" format="color" />
        <attr name="tab_slide_text_size" format="dimension" />
        <attr name="tab_slide_bitmap_width" format="dimension" />
        <attr name="tab_slide_bitmap_height" format="dimension" />
        <attr name="tab_slide_bitmap_setting" format="boolean" />
        <attr name="tab_slide_indicator_visible_count" format="integer" />
        <attr name="tab_slide_indicator_color" format="color" />
        <attr name="tab_slide_indicator_style">
            <enum name="bitmap" value="0" />
            <enum name="line" value="1" />
            <enum name="triangle" value="2" />
        </attr>
        <attr name="tab_slide_style_bitmap_src" format="reference" />
        <attr name="tab_slide_style_line_padding" format="dimension" />
        <attr name="tab_slide_indicator_height" format="dimension" />
        <attr name="tab_slide_indicator_width" format="dimension" />

    </declare-styleable>


    <declare-styleable name="RecordVideoProgressBar">
        <attr name="maxProgress" format="string" />
        <attr name="progressColor" format="color" />
        <attr name="backColor" format="color" />
        <attr name="strokeWidth" format="dimension" />
    </declare-styleable>


    <!--注意这里的name要和自定义View的名称一致，不然在布局文件中无法引用-->
    <declare-styleable name="SortScrollbarsView">
        <attr name="scroll_color" format="color" />
        <attr name="scroll_bg_color" format="color" />
        <attr name="scroll_height" format="dimension" />
        <attr name="scroll_bg_width" format="dimension" />
        <!--缩放的倍数-->
        <attr name="scroll_radio" format="float" />
    </declare-styleable>

</resources>